{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10
      }
    }
  ],
  "routes": [
    {
      "src": "/login",
      "dest": "/server/server.js"
    },
    {
      "src": "/register",
      "dest": "/server/server.js"
    },
    {
      "src": "/executeQuery",
      "dest": "/server/server.js"
    },
    {
      "src": "/checkEmail",
      "dest": "/server/server.js"
    },
    {
      "src": "/userSignUp",
      "dest": "/server/server.js"
    },
    {
      "src": "/getCustomerData",
      "dest": "/server/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json|woff|woff2|ttf|eot))",
      "dest": "/client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
